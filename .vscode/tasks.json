{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "Assemble current file",
            "command": "${workspaceRoot}/../../../SDK/fel4-sdk-0.0.1/bin/x86_64-linux-elf-as -o ${fileBasenameNoExtension}.o ${relativeFile}",
            "type": "shell",
            "problemMatcher": {
                "fileLocation": ["relative", "${workspaceRoot}"],
                "pattern": {
                    "regexp": "^(.*):(\\d+):\\s+(Warning|Error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "severity": 3,
                    "message": 4
                }
            }
        }
    ]
}